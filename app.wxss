.rm-nav-margin {
  height: 100rpx;
}

.navs {
  background-color: #ffffff;
  border-top: 1rpx #f8f8f8 solid;
  position: fixed;
  height: 100rpx;
  width:100%;
  bottom:0;
}

.nav {
  display: flex;
  float: left;
  flex-direction: column;
  padding: 10rpx 102.5rpx 0 102.5rpx;
}

.nav-plus {
  display: flex;
  float: left;
  width: 45rpx;
  flex-direction: column;
  padding: 10rpx 102.5rpx 0 102.5rpx;
}

.nav .icons {
  font-size: 45rpx;
  margin-bottom: 5rpx;
  text-align: center;
  color:#bfbfbf;
}

.nav .text {
  font-size: 23rpx;
  margin:0 auto;
  color: #bfbfbf;
}

.nav-plus .plus {
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
  top: -55rpx;
  width: 120rpx;
  height: 120rpx;
}