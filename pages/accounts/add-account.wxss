.index {
  font-size: 25rpx;
  color: #333;
}

.gradient-top {
  width: 100%;
  height: 300rpx;
  z-index: -10;
  position: fixed;
  background-image: linear-gradient(30deg, #fd6365, #fc9e7c);
}

.card {
  width: 670rpx;
  margin: 110rpx auto;
  background: white;
  border-radius: 10rpx; 
  box-shadow: 0px 10px 5px 0px #eeeeee;
}

.card-content {
  padding: 30rpx 40rpx;
}

.card .tab {
  color: #bcbcbc;
  font-size: 35rpx;
}