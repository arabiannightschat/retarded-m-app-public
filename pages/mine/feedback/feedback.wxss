.feedback {
  padding: 20rpx 50rpx;
  font-size: 25rpx;
}

.section {
  margin: 30rpx 0;
}

.section .title {
  font-size: 25rpx;
  margin: 20rpx 0;
}

.section .rem {
  margin: 20rpx 0;
  color: #bfbfbf;
}

.section .content {
  border:8rpx #f8f8f8 dashed;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section .input {
  font-size: 30rpx;
}

.section .textarea {
  font-size: 30rpx;
  height: 200rpx;
}

.section .btn {
  margin: 50rpx 0;
  height: 100rpx;
  width: 400rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 10rpx;
}

.padding-left-10 {
  padding-left: 10rpx;
}