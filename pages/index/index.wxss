/* pages/index/index.wxss */
.index {
  font-size: 25rpx;
  color: #333;
}

.background-top {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -10;
}

.top .title {
  margin: 40rpx 0 0 40rpx;
  color: white;
}

.large-font {
  font-size: 50rpx;
}

.large-font-2 {
  font-size: 80rpx;
}

.card {
  width: 670rpx;
  margin: 40rpx auto;
  background: white;
  border-radius: 20rpx; 
  box-shadow: 0px 10px 5px 0px #eeeeee;
  position: relative
}

.card-content {
  padding: 50rpx;
}

.blank-card {
  height: 500rpx;
  font-size: 70rpx;
  line-height: 500rpx;
  text-align: center;
}

.gray-color{
  color: #cccccc;
}

.default-color{
  color: #333;
}

.main-color {
  color: #fe5856;
}

.margin-top-15 {
  margin-top: 15rpx;
}

.margin-top-10 {
  margin-top: 10rpx;
}

.now-date {
  text-align: center;
  position: absolute;
  right: 50rpx;
}

.container {
  margin-top: 50rpx;
  height: 100%;
  position: relative;
  left: -15rpx;
}

.blank-canvas {
  height: 200px;
  font-size: 70rpx;
  line-height: 200px;
  text-align: center;
}

.canvas {
  width: 100%;
  height: 200px;
}

.records-area {
  margin: 50rpx 40rpx 40rpx 40rpx;
}

.records-area .title {
  letter-spacing: 7rpx;
  color: #666
}

.align-left {
  float: left;
}

.align-right {
  float: right;
}

.clear-both {
  clear: both;
}

.record {
  padding: 35rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx #efefef solid;
}

.record .record-title {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.record .record-tag {
  background: #ffe2e2;
  color: #fd6365;
  border: 1rpx #ff8284 solid;
  border-radius: 10rpx;
  padding: 5rpx;
  font-size: 20rpx;
}

.record .record-money {
  letter-spacing: 7rpx;
}

.new-records-icon {
  position: fixed;
  right: 200rpx;
  bottom: 80rpx;
  box-shadow: 4px 4px 5px 0px #efefef;
  padding: 10rpx;
}