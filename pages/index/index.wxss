/* pages/index/index.wxss */
.index {
  font-size: 25rpx;
  color: #333;
}

.background-top {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -10;
}

.top .title {
  margin: 40rpx 0 0 40rpx;
  color: white;
}

.large-font {
  font-size: 50rpx;
}

.large-font-2 {
  font-size: 80rpx;
}

.card {
  width: 670rpx;
  margin: 40rpx auto;
  background: white;
  border-radius: 10rpx; 
  box-shadow: 0px 10px 5px 0px #eeeeee;
  position: relative
}

.card-content {
  padding: 50rpx;
}

.gray-color{
  color: #cccccc;
}

.default-color{
  color: #333;
}

.main-color {
  color: #fe5856;
}

.margin-top-15 {
  margin-top: 15rpx;
}

.margin-top-10 {
  margin-top: 10rpx;
}

.now-date {
  text-align: center;
  position: absolute;
  right: 50rpx;
}

.container {
  margin-top: 50rpx;
  height: 100%;
  position: relative;
  left: -20rpx;
}
.canvas {
  width: 100%;
  height: 200px;
}

.records {
  margin: 50rpx 40rpx 40rpx 40rpx;
}

.records .title {
  letter-spacing: 7rpx;
  color: #666
}

.records .align-left {
  float: left;
}

.records .align-right {
  float: right;
}

.records .clear-both {
  clear: both;
}

.record {
  padding: 30rpx 0;
}