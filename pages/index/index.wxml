<!--pages/index/index.wxml-->
<view class="index">
  <!-- 顶部色块 -->
  <view class="top">
    <!-- 背景图 -->
    <image src="../../images/index/background-top.jpg" class="background-top"/>
    <!-- 沉浸栏 -->
    <view style="width:100%;height:{{statusBarHeight}}px"></view>
    <!-- 标题栏 -->
    <view class="title">
      <view>今天是你记账的第</view>
      <view><text class="large-font">32</text> 天</view>
    </view>
    <!-- 卡片 -->
    <view class="card">
      <view class="card-content">
        <!-- 当前日期展示 -->
        <view class="now-date">
          <view>2020年</view>
          <view class="large-font-2">3月</view>
        </view>
        <!-- 卡片数据展示 -->
        <view class="card-data">
          <view class="gray-color">距离结算还有<text class="main-color"> 8 </text>天，预算余额</view>
          <view class="main-color">￥ <text class="large-font-2">388.25</text></view>
        </view>
        <!-- 图表 -->
        <view class="container">
          <canvas canvas-id="lineCanvas" disable-scroll="true" class="canvas" bindtouchstart="touchHandler"></canvas>
        </view>
      </view>
    </view>
  </view>  
</view>

