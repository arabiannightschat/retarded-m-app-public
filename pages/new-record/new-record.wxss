
.top {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex: row;
  justify-content: space-between;
  padding: 0 50rpx 10rpx 50rpx;
  font-size: 25rpx;
  background: #fff;
  position: fixed;
  width: 650rpx;
  top: 0
}

.rm-top-margin {
  height: 100rpx;
}

.recordType {
  padding: 0 120rpx;
}

.types {
  margin: 25rpx 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.type {
  display: flex;
  flex-direction: column;
  margin: 25rpx 41rpx;
}

.type .icons {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.type .icon {
  font-size: 60rpx;
  line-height: 100rpx;
  margin :0 20rpx;
}

.type .text {
  text-align: center;
  font-size: 25rpx;
  margin-top: 10rpx;
}

/* 键盘相关 */
.keyboard {
  border-top: 1rpx #f8f8f8 solid;
  width: 100%;
  height: 504rpx;
  position: fixed;
  bottom: 0rpx;
  font-size: 30rpx;
  background: #fff
}

.rm-keyboard-margin {
  height: 504rpx;
}

.result {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  text-align: right;
}

.money {
  font-size: 50rpx;
  padding-right: 20rpx;
}

.nums {
  height: 80%;
}

.column {
  width: 185rpx;
  height: 400rpx;
  border-right:1rpx #f8f8f8 solid;
  float: right;
}

.row {
  height: 100rpx;
  border-top:1rpx #f8f8f8 solid;
  text-align: center;
  line-height: 100rpx;
}

.row-hover {
  border-top: 1rpx #bfbfbf solid;
}

.ok {
  height: 300rpx;
  border-top:1rpx #f8f8f8 solid;
  text-align: center;
  line-height: 302rpx;
}

.down {
  padding: 20rpx 10rpx 20rpx 30rpx;
}