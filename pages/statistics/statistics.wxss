/* pages/statistics/statistics.wxss */
.gradient-top {
  position: fixed;
  width: 100%;
}

.main {
  position:relative;
}
.title {
  color: #fff;
  font-size: 35rpx;
  text-align: center;
}

.card {
  width: 670rpx;
  margin: 30rpx auto;
  background: white;
  border-radius: 20rpx; 
  position: relative
}

.card-content {
  padding: 35rpx;
  display: flex;
  flex: row
}

.canvas {
  width: 100%;
  height: 200px;
}

.canvas-ring {
  height: 200px;
  width: 62.5%;
}

.title-wrap {
  text-align: center;
  color: #fff;
  font-size: 35rpx;
  display: flex;
  margin-top: 20rpx;
}

.title-wrap .icon {
  margin-left: 20rpx;
  position: relative;
  top: -11rpx;
  padding: 20rpx;
}

.title-wrap .text {
  margin-left: 10rpx;
}

.inset-shadow {
  box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
  background: rgba(0, 0, 0, 0.1);
  text-align: center;
  color: white;
  font-size: 25rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.wrap {
  margin: 10rpx 40rpx 0 40rpx;
}

.stat-info {
  padding: 30rpx 0 0 35rpx;
}

.stat-1 {
  color: #ccc;
  font-size: 20rpx;
  line-height: 30rpx;
}

.stat-2 {
  font-size: 35rpx;
  line-height: 50rpx;
}

.small-font {
  font-size: 20rpx;
}