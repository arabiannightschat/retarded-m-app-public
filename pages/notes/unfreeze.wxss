/* pages/notes/unfreeze.wxss */
.top .background {
  margin: 150rpx auto 0 auto;
  width: 287rpx;
  height: 292rpx;
  display: block;
}

.section {
  padding: 30rpx 120rpx;
  font-size: 35rpx;
  text-align: center;
}

.info {
  font-size: 35rpx;
  color: #bcbcbc;
}

.info-small {
  margin-top: 10rpx;
  font-size: 25rpx;
}

.title {
  margin-top: 35rpx;
}

.note-info {
  color: #bcbcbc;
  font-size: 25rpx;
  margin-top:5rpx; 
}

.button-wrap {
  display: flex;
  width: 600rpx;
  margin: 0 auto
}

.btn {
  margin: 50rpx auto;
  height: 100rpx;
  width: 280rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(30deg, #fd6365, #fc9e7c);
  color: white;
}

.btn:active {
  background-image: linear-gradient(30deg, #fc424e, #fc7553);
}